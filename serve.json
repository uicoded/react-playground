{
  "rewrites": [
    { "source": "/react-playground", "destination": "/react-playground/index.html" },
    { "source": "/react-playground/", "destination": "/react-playground/index.html" },
    { "source": "/", "destination": "/react-playground/index.html" },
    { "source": "/**", "destination": "/react-playground/index.html" }
  ],
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css" }
      ]
    },
    {
      "source": "**/*.js.map",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ]
    }
  ]
}
